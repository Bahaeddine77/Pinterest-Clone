{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-3 text-center">Please sign in</h1>
            <div class="mb-5 text-center text-muted">Create your own pins</div>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
               
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                </div>
               
               
              

                <div class="d-flex justify-content-between mb-3">
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                            <label class="form-check-label" for="remember_me">
                                Remember me
                            </label>
                        </div>
                    
                    </div>
                 
                    <a href="{{path ('app_forgot_password_request')}}" class="text-decoration-none">Forget Password ?</a>
                </div>
               
                 <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}" >

                <button class="btn btn-block btn-primary" type="submit">
                    Sign in
                </button>

                <div class="mt-5 mb-3 text-muted text-center" >Not registered yet ? <a href="#" class="text-decoration-none">Create an account</a> </div>
            </form>
                    
        
        </div>
    
    </div>

{% endblock %}
