{% extends 'base.html.twig' %}

{% block title 'Profile' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row">
    <div class="mx-auto col-md-6 text-center">
        <h1 class=" my-5">Profile</h1>
        <img src="images/images.png" alt="pinterest_logo">

        <p class="lead mt-5">{{app.user.email}}</p>
        <h2>{{app.user.nom }} {{app.user.prenom}}</h2>

        <p><small>Account created on {{app.user.createdAt|date('d/m/Y')}}</small></p>
        <p>
            <a href="{{path ('app_account_edit')}}" class='text-decoration-none'>Edit Account</a> |
            <a href="{{path ('app_account_change_password')}}" class='text-decoration-none'>Change Password</a>

        </p>
            
      
    
    </div>
</div>
{% endblock %}
